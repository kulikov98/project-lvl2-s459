{
    "name": "kulikov98/gendiff",
    "bin" : [
        "bin/gendiff"
    ],
    "description": "A utility for finding differences in configuration files.",
    "type": "project",
    "authors": [
        {
            "name": "kulikov98",
            "email": "kulikov98@gmail.com"
        }
    ],
    "require": {
        "wp-cli/php-cli-tools": "^0.11.11",
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^4.2.4",
        "funct/funct": "^1.5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0@dev",
        "phpunit/phpunit": "^8.2@dev"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "autoload": {
        "files": [
            "src/Differ.php",
            "src/Parser.php",
            "src/Ast.php",
            "src/renderer/Plain.php",
            "src/renderer/Text.php"
        ],
        "psr-4": {
            "Differ\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs" : "phpcs",
        "phpunit": "phpunit",
        "test": "phpunit tests"
    }
}
